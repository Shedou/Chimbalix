# crop the top frame border of maximized application windows."

frame_border_top=0

# button_layout :
#	O = Option menu
#	T = Stick
#	H = hide
#	S = shade
#	M = maximize
#	C = close
#	| = title

# -= =============== =- #
# -= Button Settings =- #
# -= =============== =- #

button_layout=OTS|HMC

button_offset=2
maximized_offset=2
button_spacing=2

